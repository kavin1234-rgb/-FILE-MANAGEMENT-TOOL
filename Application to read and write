#include <iostream>
#include <fstream>
#include <string>
using namespace std;
void writeFile(const string &filename) {
    ofstream file(filename); // Open file in write mode
    if (!file) {
        cout << "Error opening file!" << endl;
        return;
    }
     string content;
    cout << "Enter text to write to the file (end with ENTER + CTRL+D / CTRL+Z):" << endl;
    cin.ignore(); 
    getline(cin, content); 
    file << content << endl; 
    file.close();
    cout << "File written successfully!" << endl;
}
void readFile(const string &filename) {
    ifstream file(filename); 
    if (!file) {
        cout << "File does not exist!" << endl;
        return;
    }
string line;
    cout << "File Content:" << endl;
    while (getline(file, line)) { 
        cout << line << endl;
    }
    
    file.close();
}
void deleteFile(const string &filename) {
    if (remove(filename.c_str()) == 0) {
        cout << "File deleted successfully!" << endl;
    } else {
        cout << "Error deleting file or file does not exist!" << endl;
    }
}
int main() {
    int choice;
    string filename;
do {
        cout << "\nFile Management Tool\n";
        cout << "1. Create & Write File\n";
        cout << "2. Read File\n";
        cout << "3. Delete File\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter filename to write: ";
                cin >> filename;
                writeFile(filename);
                break;
            case 2:
                cout << "Enter filename to read: ";
                cin >> filename;
                readFile(filename);
                break;
            case 3:
                cout << "Enter filename to delete: ";
                cin >> filename;
                deleteFile(filename);
                break;
            case 4:
                cout << "Exiting program..." << endl;
                break;
            default:
                cout << "Invalid choice! Try again." << endl;
        }
    } while (choice != 4);

return 0;
}
